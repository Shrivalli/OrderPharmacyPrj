@model Portal.Models.RefillOrder
@{ ViewData["Title"] = "ViewRefillDues"; }
<style>
    form {
        display: block;
        margin-left: 400px;
        margin-right: 400px;
        width: 300px;
    }
</style>

<div class="login-form">
<div class="row">

<div class="col-md-5">
    <form asp-action="ViewRefillDuesDetails" method="get">

        <h2 class="text-center">View Refill Dues Details</h2>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Subscription_ID" class="control-label"></label>

            <input asp-for="Subscription_ID" type="number" name="subId"  class="form-control" />
            <span asp-validation-for="Subscription_ID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FromDate" class="control-label"></label>

            <input asp-for="FromDate" type="date" name="fromDate" class="form-control" />
            <span asp-validation-for="FromDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="View Refill Dues" class="btn btn-primary btn-block" />
        </div>
    </form>
    </div>
    </div>
</div>
